<!DOCTYPE html>
<html>
<head>
    <title>Services Report</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 15px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h2>Services Report</h2>
    <table>
        <tr>
            <th>Host</th>
            <th>Service Name</th>
            <th>Status</th>
        </tr>
        {% for host, services in services_data.items() %}
            {% for service in services %}
                {% if service %}
                    {% set service_name = service.split()[0] %}
                    {% set service_status = service.split()[2] %}
                    <tr>
                        <td>{{ host }}</td>
                        <td>{{ service_name }}</td>
                        <td>{{ service_status }}</td>
                    </tr>
                {% endif %}
            {% endfor %}
        {% endfor %}
    </table>
</body>
</html>
